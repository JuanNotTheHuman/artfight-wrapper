{
  "compilerOptions": {
    "target": "ES2024",
    "module": "Node16",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "declaration": true,
    "forceConsistentCasingInFileNames": true,
    "declarationDir": "./dist/types",
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "importHelpers": true,
    "rootDir": "./src",
    "downlevelIteration": true,
  },
  "include": ["./src/**/*"]
}